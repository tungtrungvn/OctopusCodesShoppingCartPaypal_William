    //public const string SettingCurrencyUnit = "$";
    var currencyUnit = Constants.SettingCurrencyUnit;
}

<div class="product-details">
    <!--product-details-->
    <div class="col-sm-5">
        <div class="view-product">
            @*Main Image*@
            <img src="@(Model.MainImg)" alt="@Model.MainImg" />
        </div>

        @*Change By William*@
        @*Description : Change html to render carousel. Previously carousel not work*@
